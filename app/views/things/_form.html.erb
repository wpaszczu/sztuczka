<%= simple_form_for @thing, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :foto, as: :file %>
  <%= f.input :foto2, as: :file %>
  <%= f.input :foto3, as: :file %>


<%= image_tag @thing.foto.url(:thumb) %>
<%= image_tag @thing.foto2.url(:thumb) %>
<%= image_tag @thing.foto3.url(:thumb) %>


<br>
  <%= f.input :title %>

  <%= f.input :opisik %>

  <%= f.input :opis %>

  <%= f.input :meta %>

  <%= f.input :recenzja %>


  <%= f.input :rodzaj, as: :radio_buttons,
  collection: ['spektakl', 'warsztat', 'specjalny'] %>



  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                things_path, :class => 'btn btn-default' %>
<% end %>
